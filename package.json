{
  "name": "mono",
  "description": "This is a private for-fun-only TypeScript monorepo with internal libraries, utils, cli tools and apps. Do not rely on any of the contained code for production use.",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "ts": "node s/tsrun.mjs",
    "indextsAll": "echo '\nINDEX-FILES...' && yarn workspaces foreach -Apt run indexts",
    "fixOwnWsImports": "echo '\nFIX OWN WS IMPORTS...' && node s/devkit_v0.0.0.cjs deps fix --fixes imports -y",
    "removeEmprtWsFiles": "echo '\nREMOVE EMPTY WS FILES...' && node s/removeEmptyWsFiles.mjs",
    "buildAll": "echo '\nBUILLD...' && yarn workspaces foreach -Apt run build && node s/distListLibs.mjs && node s/writeReadme.mjs",
    "lintAll": "echo '\nLINT...' && yarn workspaces foreach -Apt run lint",
    "format": "echo '\nFORMAT...' && prettier {.github,.vscode,s,docs,apps,libs} -w --l",
    "typecheck": "echo '\nTYPECHECK...' && yarn tsc -p tsconfig.json --noEmit",
    "test": "echo '\nTEST...' && vitest --config 'vitest.config.js' --run",
    "test-coverage": "echo '\nTEST-COVERAGE...' && yarn test --coverage && yarn open-coverage",
    "depcheckUnused": "echo '\nDEPCHECK...' && node s/depcheckUnused.mjs",
    "precommit": "cls && yarn install && yarn removeEmprtWsFiles && yarn fixOwnWsImports && yarn indextsAll && yarn typecheck && yarn lintAll && yarn depcheckUnused && yarn test-coverage && yarn buildAll && yarn format",
    "t": "vitest --config 'vitest.config.js'",
    "dk": "yarn workspace devkit build && node --max-old-space-size=8192 .dist/devkit.cjs",
    "DK": "node --max-old-space-size=8192 .dist/devkit.cjs",
    "open-coverage": ".coverage/html/index.html"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@microsoft/tsdoc": "^0.15.1",
    "@types/cli-table": "^0.3.4",
    "@types/command-exists": "^1.2.3",
    "@types/date-fns": "^2.6.3",
    "@types/depcheck": "^0.9.4",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.20",
    "@types/lodash-es": "^4.17.12",
    "@types/memoizee": "^0",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.0.14",
    "@types/shuffle-array": "^1.0.5",
    "@types/source-map-support": "^0.5.10",
    "@types/strip-comments": "^2.0.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "corepack": "^0.29.3",
    "depcheck": "1.4.7",
    "esbuild": "^0.23.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.8.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsd": "^0.31.2",
    "typescript": "5.5.4",
    "typescript-eslint": "^7.17.0",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.37",
    "ansi-colors": "^4.1.3",
    "cli-table": "^0.3.11",
    "command-exists": "^1.2.9",
    "commander": "^14.0.0",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "enhanced-ms": "^4.1.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.0",
    "iter-tools": "^7.5.4",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "memoizee": "^0.4.17",
    "mnemonist": "^0.40.3",
    "ms": "^2.1.3",
    "onetime": "^7.0.0",
    "p-queue": "^8.1.0",
    "source-map-support": "^0.5.21",
    "stacktrace-parser": "^0.1.11",
    "strip-comments": "2.0.1",
    "type-fest": "4.41.0",
    "upath": "^2.0.1",
    "walkdir": "^0.4.1"
  },
